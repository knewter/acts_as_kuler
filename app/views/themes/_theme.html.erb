<%= link_to theme.name, theme_path(theme) -%> by <%= theme.creator -%>
<a href='<%= theme_path(theme) -%>'>
  <ul class='color-bar mini'>
    <% theme.colors.each do |color| -%>
      <li style='background-color: #<%= color.hex -%>' id="<%= dom_id(color) -%>"></li>
    <% end -%>
  </ul>
</a>
<div class='clear'></div>
