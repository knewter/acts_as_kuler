<script type="text/javascript">
Event.observe(window,'load',function() {
 var <%= options[:name] -%> = new Refresh.Web.ColorPicker('<%= options[:name] -%>',{startHex: '<%= options[:color] -%>', startMode:'s'});
});
<% if options[:observe_id] -%>
  function handleColorChange(field){
    $('<%= options[:observe_id] -%>').style.backgroundColor = "#" + field.value;
  }
  new Form.Element.Observer($('<%= options[:name] -%>_Hex'), 1, handleColorChange);
<% end -%>
</script>
