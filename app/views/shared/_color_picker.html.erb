<table class='colorpicker'>
  <tr>
    <td valign="top" class='colormap'>
      <div id="<%= options[:name] -%>_ColorMap"></div>
    </td>
    <td valign="top">
      <div id="<%= options[:name] -%>_ColorBar"></div>
    </td>

    <td valign="top">
      <table>
        <tr>
          <td colspan="3">
            <div id="<%= options[:name] -%>_Preview" style="background-color: #fff; width: 60px; height: 60px; padding: 0; margin: 0; border: solid 1px #000;">
              <br />
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_HueRadio" name="<%= options[:name] -%>_Mode" value="0" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_HueRadio">H:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Hue" value="0" style="width: 40px;" /> &deg;
          </td>
        </tr>

        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_SaturationRadio" name="<%= options[:name] -%>_Mode" value="1" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_SaturationRadio">S:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Saturation" value="100" style="width: 40px;" /> %
          </td>
        </tr>

        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_BrightnessRadio" name="<%= options[:name] -%>_Mode" value="2" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_BrightnessRadio">B:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Brightness" value="100" style="width: 40px;" /> %
          </td>
        </tr>

        <tr>
          <td colspan="3" height="5">

          </td>
        </tr>

        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_RedRadio" name="<%= options[:name] -%>_Mode" value="r" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_RedRadio">R:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Red" value="255" style="width: 40px;" />
          </td>
        </tr>

        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_GreenRadio" name="<%= options[:name] -%>_Mode" value="g" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_GreenRadio">G:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Green" value="0" style="width: 40px;" />
          </td>
        </tr>

        <tr>
          <td>
            <input type="radio" id="<%= options[:name] -%>_BlueRadio" name="<%= options[:name] -%>_Mode" value="b" />
          </td>
          <td>
            <label for="<%= options[:name] -%>_BlueRadio">B:</label>
          </td>
          <td>
            <input type="text" class='text' id="<%= options[:name] -%>_Blue" value="0" style="width: 40px;" />
          </td>
        </tr>


        <tr>
          <td>
            #:
          </td>
          <td colspan="2">
            <input type="text" class='text' id="<%= options[:name] -%>_Hex" name="<%= options[:name] -%>_Hex" value="FF0000" style="width: 60px;" />
          </td>
        </tr>

      </table>
    </td>
  </tr>
</table>


